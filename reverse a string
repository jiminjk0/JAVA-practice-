import java.util.*;

public class Swap
{

    public static void main(String[] args)
    {
       Scanner sc = new Scanner(System.in);
       System.out.println("Enter a string");
       String str = sc.next();
       String rev=" ";

       for(int i=str.length()-1; i>=0; i--) // 3 2 1 0
       {
       
        rev = rev+ str.charAt(i); // DCBA

        
       }

       System.out.println("reverse word is " + rev);

       
    }
}

// method 2 using StringBuffer

import java.util.*;

public class Swap
{

    public static void main(String[] args)
    {
       Scanner sc = new Scanner(System.in);
       System.out.println("Enter a string");
       String str=sc.next();
       StringBuffer sb = new StringBuffer(str);
       sb.reverse();

       System.out.println("reverse word is " + sb);

       
    }
}


